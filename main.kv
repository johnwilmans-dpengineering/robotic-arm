<MainScreen>:

    name: 'main'
    on_enter: root.start()
    leftbtn: leftbtn
    rightbtn: rightbtn
    magnet_button: magnet_button
    upbtn: upbtn
    pos_label: pos_label
    FloatLayout:
        size_hint: 1, 1

    DPEAButton:
        id: test_button
        text: 'shudown'
        size: 100, 100
        x: 1800
        y: 1000
        color: 0, 1, 0, 1
        on_press: root.shutdown()



    DPEAButton:
        id: magnet_button
        text: "magnet off"
        size: 150, 150
        x: 100
        y: 800
        color: 1, 0, 0, 1
        on_press: root.magnet()

    DPEAButton:
        id: upbtn
        text: "Up"
        size: 150, 150
        x: 400
        y: 800
        color: 1, 0, 0, 1
        on_press: root.updown()


    DPEAButton:
        id: leftbtn
        text: "Left"
        size: 150, 150
        x: 100
        y: 500
        color: 0, 1, 0, 1

    DPEAButton:
        id: rightbtn
        text: "right"
        size: 150, 150
        x: 400
        y: 500
        color: 0, 1, 0, 1

    DPEAButton:
        id: autobeepboop
        text: "autobeepboop"
        size: 150, 150
        x: 100
        y: 200
        color: 0, 1, 0, 1
        on_press: root.autobeepboop()

    DPEAButton:
        id: autobeepboopbeep
        text: "autobeepboopbeep"
        size: 150, 150
        x: 400
        y: 200
        color: 0, 1, 0, 1
        on_press: root.autobeepboopbeep()








    Label:
        id: pos_label
        size_hint: None, None
        text: "0"
        font_size: 30
        center_x: root.width * 0.5
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0